{
	"$schema": "https://biomejs.dev/schemas/1.2.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noEmptyInterface": "off"
			},
			"style": {
				"noUnusedTemplateLiteral": "off"
			}
		},
		"ignore": ["dist"]
	}
}
