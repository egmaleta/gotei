{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
